            <div class="item">
                <div>Nome</div>
                <div>
                    <input type="text" name="name" id="" value="{{member.name}}">
                </div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input type="text" name="email" id=""  value="{{member.email}}">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" id="" value="{{member.birth}}">
                </div>
            </div>
            
            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" id="" {% if member.gender == 'M' %}
