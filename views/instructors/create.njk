{% extends 'layout.njk' %}

{% block content %}

    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style='background: url(https://source.unsplash.com/collection/3465564/900x900) no-repeat center center/ cover;'>

        </section>
        <section class="details">
            <h3>Novo instrutor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" id="" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Instrutor</div>
                <div>
                    <input type="text" name="name" id="" placeholder="Nome">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth" id="">
                </div>
            </div>
            
            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" id="" checked>Masculino</span>
                    <span><input type="radio" name="gender" value="F" id="">Feminino</span>

                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input type="text" name="services" id=""  placeholder="Separe os serviços prestados por vírgula">
                </div>
            </div>

            <input type="submit" value="Salvar">

        </section>
    </form>

{% endblock content %}